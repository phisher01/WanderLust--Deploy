<% layout("layouts/boiler.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2" >
            
            <h3>Create a New Listing</h3>
            <form action="/listings"   novalidate method="post" class="needs-validation " enctype="multipart/form-data">
                    
                    <!-- <label for=""></label> -->
                    <div class="mb-3">
                <label    class="form-label" >Title</label>
                <input type="text"   required    class="form-control"     name="Listing[title]" placeholder="Add a catchy title">
                <div class="valid-feedback">Title looks good</div>
                <div class="invalid-feedback">Please enter title here</div>
            </div>

            <div class="mb-3">
                <label    class="form-label"  for=""> Description</label>
            <textarea name="Listing[description]"  placeholder="Enter a Description for your Location"  required  class="form-control"  ></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
            </div>
            
            <div class="mb-3">
                <label    class="form-label"  for="">Image Link</label>
                <input type="file"      required  class="form-control"   name="Listing[image]">
                
                
               
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label    class="form-label"  for=""> Price</label>
                    <input  type="number" required  class="form-control"   name="Listing[price]" placeholder="1200">
                    <div class="invalid-feedback">Please enter valid price</div>
                </div>
            <div class="mb-3 col-md-8">
                <label    class="form-label"  for="">Country</label>
                <input type="text"   required   class="form-control"   name="Listing[country]" placeholder="India">
                <div class="invalid-feedback">Please enter valid Country</div>
            </div>
            </div>

            <div class="mb-3 ">

                <label    class="form-label"  >Category</label>
                <select class="form-control" name="Listing[category]" required>
                    <option value="" disabled  >Select a   Category</option>
                    <option value="Trending">Trending</option>
                    <option value="Rooms">Rooms</option>
                    <option value="Iconic Cities">Iconic Cities</option>
                    <option value="Mountains">Mountains</option>
                    <option value="Castles">Castles</option>
                    <option value="Amazing Pools">Amazing Pools</option>
                    <option value="Camping">Camping</option>
                    <option value="Farms">Farms</option>
                    <option value="Arctic">Arctic</option>  
                   
                </select>
                <div class="invalid-feedback">Please select any category</div>
                
            </div>



                <div class="mb-3">
                <label    class="form-label"  for="">Location</label>
                <input type="text"    required  class="form-control"   name="Listing[location]" placeholder="Jaipur,Rajasthan">
                <div class="invalid-feedback">Please enter valid Location</div>
            </div>
    
    <button  class="btn btn-dark add-btn mt-3 mb-3">Add</button>
</form>
</div>
</div>

</body>
